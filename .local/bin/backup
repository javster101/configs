#!/bin/bash

SERVER_IP=192.168.1.3
sudo btrfs subvolume snapshot /var/home /var/home/sync
rsync --archive --progress --inplace --checksum --delete -e ssh /var/home/sync/javst/ root@$SERVER_IP:/mnt/user/javier-storage/backups/desktop/home-backup/snapshot/javst
sudo btrfs subvolume delete /var/home/sync
